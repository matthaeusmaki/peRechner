<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PhosphatActivity"
    android:background="#dddddd" >

    <Button
        android:id="@+id/addFoodBtnId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:onClick="addMeal"
        android:text="@string/buttonAddMeal" />
    
	<ScrollView 
	    android:layout_width="fill_parent" 
        android:layout_below="@+id/addFoodBtnId"
        android:layout_centerHorizontal="true"
	    android:layout_height="wrap_content"
	    android:layout_marginBottom="65dp"> 

	    <LinearLayout
	        android:id="@+id/mealListId"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="5dp"
	        android:orientation="vertical" >
	    </LinearLayout>
    </ScrollView>

	<LinearLayout
	    android:layout_alignParentBottom="true"
		android:layout_alignParentLeft="true"
   		android:layout_width="match_parent"
        android:layout_height="50dp"
		android:background="#127633"
        android:orientation="horizontal">
	    
	    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="8dp"
            android:paddingTop="4dp"
            android:text="@string/pe_short"
            android:textColor="#ffffff" />
	    
		<TextView
		    android:id="@+id/peTextId"
		    android:layout_marginLeft="20dp"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:height="50dp"
		    android:textColor="#ffffff"
		    android:textSize="10pt"
		    android:textAppearance="?android:attr/textAppearanceLarge" />
	</LinearLayout>	    

</RelativeLayout>